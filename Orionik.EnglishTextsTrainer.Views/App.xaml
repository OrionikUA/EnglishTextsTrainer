<Application x:Class="Orionik.EnglishTextsTrainer.Views.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Orionik.EnglishTextsTrainer.Views"
             xmlns:vm="clr-namespace:Orionik.EnglishTextsTrainer.ViewModels;assembly=Orionik.EnglishTextsTrainer.ViewModels"
             StartupUri="MainView.xaml">
    <Application.Resources>
        <DataTemplate DataType="{x:Type vm:ConnectViewModel}">
            <local:ConnectView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:MainViewModel}">
            <local:MainView/>
        </DataTemplate>
    </Application.Resources>
</Application>
